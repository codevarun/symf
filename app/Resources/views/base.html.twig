<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}Symfony на русском{% endblock %}</title>
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js" type="text/javascript"></script>
        <script src="http://yandex.st/highlightjs/6.2/highlight.min.js"></script>
        <link rel="stylesheet" href="http://yandex.st/highlightjs/6.2/styles/default.min.css">
        <script type="text/javascript">hljs.initHighlightingOnLoad();</script>
        {% block stylesheets %}
          <link href="{{ asset('/css/main.css') }}" type="text/css" rel="stylesheet" />
        	<link href="{{ asset('/css/comment.css') }}" type="text/css" rel="stylesheet" />
          {% stylesheets '@FOSCommentBundle/Resources/assets/css/comments.css' %}
          <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
          {% endstylesheets %}
        {% endblock %}
    </head>
    <body>
        <div id="wrap">
          <header>
            <div class="logo">
                <a href="{{ path('_index') }}"><img src="http://symfony.com/images/common/logo/logo_symfony_header.png" alt="Symfony"/></a>
            </div>
            <ul class="rght">
              <li><a href="{{ path('post_new') }}"><img class="icon" src="{{ asset('/images/plus.png') }}" alt="написать" title="написать"/></a></li>
              <li class="active"><a href="{{ path('post') }}">Статьи</a></li>
              <li><a href="#">Форум</a></li>
            </ul>
          </header>
          <div class="sep"></div>
          <aside id="sidebar">
              <div class="sb-header">
                Новости <a href="http://twitter.com/symfonyru"><img class="icon" src="{{ asset('/images/twitter.png') }}" alt="twitter" title="twitter"/></a></li>
              </div>
              <div class="sb-content">
                {% render "KnpLastTweetsBundle:Twitter:lastTweets" with {'username': 'symfonyru', 'limit': 5} %}
              </div>
          </aside>
          <div id="content">
            <div id="posts">
              <div class="post" style="border:none; margin:0; padding-bottom:1px; min-height: 0">
              </div>
              {% block body %}{% endblock %}
            </div>
            <div class="post" style="border:none; min-height: 20px">
              All rights reserved
            </div>
          </div>
        </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
