{% extends '::base.html.twig' %}

{% block body %}
<div class="post">
  <div class="leftbar">
    <div class="meta">Date: {{ entity.createdat|date('n M Y') }}</div>
    <div class="meta">Author: <a href="#">{{ entity.user.username }}</a></div>
    <div class="meta">Tags: <a href="#">boston</a>, <a href="#">photography</a></div>
    <div class="meta"><a href="{{ path('post_show', { 'id': entity.id }) }}#comments">10 Comments</a></div>
  </div>
  <div class="post-header">
    {{ entity.title }}
  </div>
  <div class="post-content">
    {{ entity.content | markdown }}
  </div>
</div>
{% endblock %}