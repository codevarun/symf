{% extends '::base.html.twig' %}

{% block javascripts %}
     <script src="{{ asset('/js/edit.js') }}" type="text/javascript"></script>
{% endblock %}

{% block body %}
<div class="post">
<form action="{{ path('post_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Сохранить</button> <button id="update" data-url="{{ path('post_preview') }}">Обновить предпросмотр</button> <button id="close">Убрать</button>
    </p>
</form>
</div>
<div class="post" id="preview" style="min-height: 10px">
</div>
{% endblock %}
